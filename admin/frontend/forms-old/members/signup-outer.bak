<div id='register'>
	<div class="row no-gutter">
		<form action="" method="post">
			<div class="col-xs-14 col-xs-offset-1 text-center">
				<h3>REGISTER TODAY</h3>
				<p><strong>Sign-up for Your Free Membership!</strong></p>
			</div>
			<div class='col-xs-14 col-xs-offset-1 text-center'>%%errorMessage%%</div>
			<div class='col-sm-7 col-sm-offset-1 col-xs-14 col-xs-offset-1'>
				<div class="form-group">
					<label for="firstname">First Name</label>
<!if(strlen("%%firstnameError%%")>0)!>
					<div class='field form-error'>%%firstname%%<i class="fa fa-close form-control-feedback"></i></div>
<!else!>
					<div class='field'>%%firstname%%</div>
<!fi!>
				</div>
				<div class="form-group">
					<label for="lastname">Last Name</label>
<!if(strlen("%%lastnameError%%")>0)!>
					<div class='field form-error'>%%lastname%%<i class="fa fa-close form-control-feedback"></i></div>
<!else!>
					<div class='field'>%%lastname%%</div>
<!fi!>
				</div>
				<div class="form-group">
					<label for="phone1">Phone Number</label>
<!if(strlen("%%phone1Error%%")>0)!>
					<div class='field form-error'>%%phone1%%<i class="fa fa-close form-control-feedback"></i></div>
<!else!>
					<div class='field'>%%phone1%%</div>
<!fi!>
				</div>
				<div class="form-group">
					<label for="line1">Address</label>
<!if(strlen("%%line1Error%%")>0)!>
					<div class='field form-error'>%%line1%%<i class="fa fa-close form-control-feedback"></i></div>
<!else!>
					<div class='field'>%%line1%%</div>
<!fi!>
				</div>
				<div class="form-group">
					<label for="city">City</label>
<!if(strlen("%%cityError%%")>0)!>
					<div class='field form-error'>%%city%%<i class="fa fa-close form-control-feedback"></i></div>
<!else!>
					<div class='field'>%%city%%</div>
<!fi!>
				</div>
				<div class="form-group">
					<label for="postalcode">Postal Code/Zip Code</label>
<!if(strlen("%%postalcodeError%%")>0)!>
					<div class='field form-error'>%%postalcode%%<i class="fa fa-close form-control-feedback"></i></div>
<!else!>
					<div class='field'>%%postalcode%%</div>
<!fi!>
				</div>
				<div class="form-group">
					<label for="country_id">Country</label>
<!if(strlen("%%country_idError%%")>0)!>
					<div class='field form-error'>%%country_id%%<i class="fa fa-close form-control-feedback"></i></div>
<!else!>
					<div class='field'>%%country_id%%</div>
<!fi!>
				</div>
				<div class="form-group">
					<label for="province_id">Province/State</label>
<!if(strlen("%%province_idError%%")>0)!>
					<div class='field form-error' id='provinceWrapper'>%%province_id%%<i class="fa fa-close form-control-feedback"></i></div>
<!else!>
					<div class='field' id='provinceWrapper'>%%province_id%%</div>
<!fi!>
				</div>
			</div>
			<div class='col-sm-7 col-xs-14 col-xs-offset-1 col-sm-offset-0'>
				<div class="form-group">
					<label for="password">Password</label>
<!if(strlen("%%passwordError%%")>0)!>
					<div class='field form-error'>%%password%%<i class="fa fa-close form-control-feedback"></i></div>
<!else!>
					<div class='field'>%%password%%</div>
<!fi!>
				</div>
				<div class="form-group">
					<label for="passwordConfirm">Password [Again]</label>
<!if(strlen("%%password_confirmError%%")>0)!>
					<div class='field form-error'>%%password_confirm%%<i class="fa fa-close form-control-feedback"></i></div>
<!else!>
					<div class='field'>%%password_confirm%%</div>
<!fi!>
				</div>
				<div class="form-group">
					<label for="email">Email</label>
<!if(strlen("%%emailError%%")>0)!>
					<div class='field form-error'>%%email%%<i class="fa fa-close form-control-feedback"></i></div>
<!else!>
					<div class='field'>%%email%%</div>
<!fi!>
				</div>
				<div class="form-group">
					<label for="emailConfirm">Email [Again]</label>
<!if(strlen("%%firstnameError%%")>0)!>
					<div class='field form-error'>%%email_confirm%%<i class="fa fa-close form-control-feedback"></i></div>
<!else!>
					<div class='field'>%%email_confirm%%</div>
<!fi!>
				</div>
				%%products%%
%%categories%%
				<div class='buttons'>
					%%edit%%
					%%saveButton%%
				</div>
			</div>
			<div class='clearfix'></div>
			<div class="col-xs-14 col-xs-offset-1 text-center top20 link">
				<p>Already Registered? Please <a href="/login"><strong>Sign In</strong></a></p>
			</div>
			%%signupForm%%
			%%saveInfo%%
		</form>
	</div>
</div>
<script type='text/javascript'>
$('#country_id').change(function() {
	$('#provinceWrapper').html(loadProvinces(this.value,{'name':'address[province_id]'}));
	$("select[name='address[province_id]']").addClass("form-control input-large");
});
p = "%%post:product_id%%";
if (p!="") {
	$(".products input[type='radio']").each(function(idx,el) {
		if (el.value==p) el.checked=true;
	});
}
else {
	$(".products input[type='radio']")[0].checked = true;
}
</script>