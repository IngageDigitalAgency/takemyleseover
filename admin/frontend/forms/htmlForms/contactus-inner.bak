<form class="top40" method="POST">
	%%errorMessage%%
	<div class="form-group">
		<label for="name">Your Name<span class="required">*</span></label>
		%%firstname%%
	</div>
	<div class="form-group">
		<label for="email">Your Email Address<span class="required">*</span></label>
		%%email%%
	</div>
	<div class="form-group">
		<label for="phone_name">Your Phone Number<span class="required">*</span></label>
		%%phone%%
	</div>
	<div class="form-group">
		<label for="question">Your Question, Medical or Non Medical<span class="required">*</span></label>
		%%message%%
	</div>
	<div class="form-group">
		%%captcha%%
	</div>
	<div>
		<button class="button button-green" type="submit">Submit</button>
		%%contactUs%% %%r_id%%
	</div>
</form>