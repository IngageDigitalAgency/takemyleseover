#
Custom
#

RewriteRule ^reauthorize/([0-9]+)/([0-9]+) /index.php?module=page&id=reauthorize&o=$1&r=$2 [PT,QSA,L]
RewriteRule ^billing-agreement/([0-9]+)/([0-9]+) /index.php?module=page&id=billing-agreement&o_id=$1&r=$2 [PT,QSA,L]

#
strip trailing /'s
#
RewriteCond %{SCRIPT_FILENAME} !-f
RewriteRule (.*)/ /index.php?module=page&id=$1 [PT,QSA,L]
#
assume by now we have a page
#
RewriteCond %{SCRIPT_FILENAME} !-f
RewriteRule (.*) /index.php?module=page&id=$1 [PT,QSA,L]
