RewriteRule ^(.*)/blog/([0-9]+)/([0-9]+) /index.php?module=blog&blog_id=$2&f_id=$3&blogcat=$3 [QSA,L]
RewriteRule ^(.*)/blog/([0-9]+) /index.php?module=blog&blog_id=$2 [QSA,L]
